@model LoginUser
<div class="row">
    <div class="col text-right p-0">
        <a  href="/">Register !</a>
    </div>
</div>
<h1 class="text-center">Login to this Cool Site!</h1>

<form action="/logToSuccess" method="post">
<div class="row">
    <div class="col">
        <span style="color:red" asp-validation-for="Email"></span>
        <p>Email</p>
        <input asp-for="Email">
    </div>
</div>
<div class="row">
    <div class="col">
        <span style="color:red" asp-validation-for="Password"></span>
        <p>Password</p>
        <input asp-for="Password">
    </div>
</div>
<div class="row mt-2">
    <div class="col">
        <input type="submit" value="Sign up Now">
    </div>
</div>
</form>
